{% extends "Header.j2" %}
{% block body %}
	{% from "Components/EventList.j2" import EventList %}
	{% from "Components/OptionList.j2" import OptionList %}

	<title>
		Home
	</title>

	<h4>
		Rooms
	</h4>
	<table
	  class="table table-dark table-striped"
	>
		<tbody>
			{% for id, name in home["Rooms"].items() %}
				<tr>
					<td>
						<a
						  href="/rooms/{{ id }}"
						>
							{{ name }}
						</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	{{ EventList(home["HomeEvents"], "Home Events") }}
	{{ OptionList(home["HomeOptions"], "Home Options") }}
{% endblock %}
